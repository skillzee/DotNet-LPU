@model IEnumerable<EF_Core_MVC_Demo.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeptID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeptID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeptID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
